<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@mipmap/login"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

    <TableRow>
        <TextView
            android:paddingTop="48dp"
            android:id="@+id/srTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Receiving state:" />
        <EditText
            android:id="@+id/stateET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:text="Waiting for new data..."
            android:textColor="#05e2c9" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:text="Time of data："
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/recvTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:text="IMSI："
            android:textSize="16sp" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp">
        </Spinner>
    </TableRow>

    <TableRow android:paddingTop="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:text="@string/temperature"
            android:textColor="#69eaf9"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/ms5637TmpET"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:paddingStart="96dp"
            android:paddingEnd="24dp"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/humidity"
            android:textStyle="bold"
            android:textColor="#69eaf9"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/ms5637PressET"
            android:layout_width="48dp"
            android:paddingStart="96dp"
            android:paddingEnd="24dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/Wind_speed"
            android:textStyle="bold"
            android:textColor="#69eaf9"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/kma36MaET"
            android:layout_width="48dp"
            android:paddingStart="96dp"
            android:paddingEnd="24dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/air_pressure"
            android:textColor="#69eaf9"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/kma36KreET"
            android:layout_width="48dp"
            android:paddingStart="96dp"
            android:paddingEnd="24dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/air_quality"
            android:textStyle="bold"
            android:textColor="#69eaf9"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/htu21dTmpET"
            android:layout_width="48dp"
            android:paddingStart="96dp"
            android:paddingEnd="24dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:textStyle="bold"
            android:text="@string/air_pollution"
            android:textColor="#69eaf9"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/htu21dHdyET"
            android:layout_width="48dp"
            android:paddingStart="96dp"
            android:paddingEnd="24dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>

    <!--<TableRow>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Com_level"
            android:textColor="#69eaf9"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/com_level"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="Name" />
    </TableRow>-->

    </TableLayout>

    <Button
        android:id="@+id/button_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="120dp"
        android:layout_gravity="center"
        android:text="@string/see_more"
        android:textColor="#FFFFFF"
        android:background="#F99000"/>

</LinearLayout>